# Database Configuration
# For Vercel deployment, use a connection pooler (e.g., Neon, Supabase)
DATABASE_URL=postgresql://user:password@host:5432/dbname?pgbouncer=true
DIRECT_DATABASE_URL=postgresql://user:password@host:5432/dbname

# Server Configuration
NODE_ENV=development
PORT=3000

# JWT Secret (generate a strong random string)
JWT_SECRET=your_jwt_secret_key_here

# QuickBooks API Configuration (optional)
QB_CLIENT_ID=your_quickbooks_client_id
QB_CLIENT_SECRET=your_quickbooks_client_secret
QB_REDIRECT_URI=http://localhost:3000/api/qb/callback
QB_ENVIRONMENT=sandbox
